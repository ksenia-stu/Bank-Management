        <Button Content="Find" HorizontalAlignment="Left" Margin="518,25,0,0" VerticalAlignment="Top" Width="75"/>
        <Button
        Margin="657,331,75,21">
            <StackPanel Width="31">
                <Image Source="C:\Users\user\Documents\2020-ipd23-dotnet\BankForms\exit.png"/>
                <Label Content="Close" HorizontalAlignment="Right" Margin="-5,0,-6,0" Width="42"/>
            </StackPanel>
        </Button>
        <Label Content="Customer found: Thomas Chapais, national id 45678TY" HorizontalAlignment="Left" Margin="90,52,0,0" VerticalAlignment="Top"/>
        <Label Content="Customer accounts:" HorizontalAlignment="Left" Margin="90,96,0,0" VerticalAlignment="Top"/>
        <Button Content="Deposit" HorizontalAlignment="Left" Margin="143,340,0,0" VerticalAlignment="Top" Width="90" Height="36"/>
        <Button Content="Transfer" HorizontalAlignment="Left" Margin="283,340,0,0" VerticalAlignment="Top" Width="90" Height="36"/>
        <Button Content="Withdraw" HorizontalAlignment="Left" Margin="420,340,0,0" VerticalAlignment="Top" Width="90" Height="36"/>
    </Grid>
</Window>
